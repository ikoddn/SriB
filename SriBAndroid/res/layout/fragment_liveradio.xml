<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_liveradio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.srib.app.client.MainActivity$PlaceholderFragment" >

    <no.srib.app.client.util.DTImageView
        android:id="@+id/dtImageView_liveradio_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textview_liveradio_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_liveradio_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_liveradio_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1300" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="328"
            android:visibility="invisible" >
        </View>

        <TextView
            android:id="@+id/textview_liveradio_programname"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="37" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="229"
            android:visibility="invisible" >
        </View>

        <ImageButton
            android:id="@+id/button_liveradio_play"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="203"
            android:background="@null"
            android:contentDescription="@string/imagebutton_liveradio_play_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/play" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="68"
            android:visibility="invisible" >
        </View>

        <ImageButton
            android:id="@+id/button_liveradio_stop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="67"
            android:background="@null"
            android:contentDescription="@string/imagebutton_liveradio_stop_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/stopp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="368"
            android:visibility="invisible" >
        </View>
    </LinearLayout>

 

</RelativeLayout>