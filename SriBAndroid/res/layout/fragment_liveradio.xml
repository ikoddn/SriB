<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout_liveradio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.srib.app.client.MainActivity$PlaceholderFragment" >

    <no.srib.app.client.util.DTImageView
        android:id="@+id/dtImageView_liveradio_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textview_liveradio_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_liveradio_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_liveradio_status" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageButton
            android:id="@+id/button_liveradio_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:contentDescription="@string/imagebutton_liveradio_play_desc"
            android:scaleType="fitXY"
            android:src="@drawable/play" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_liveradio_stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="@string/imagebutton_liveradio_stop_desc"
        android:scaleType="fitXY"
        android:src="@drawable/stopp" />

    <TextView
        android:id="@+id/programName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

</RelativeLayout>