<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:weightSum="780" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="222.5"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/button_info_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="67.0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/imagebutton_info_facebook_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/link_facebook" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="67.0"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/button_info_spotify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="67.0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/imagebutton_info_spotify_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/link_spotify" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="67.0"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/button_info_sribwebsite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="67.0"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/imagebutton_info_sribwebsite_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/link_sribwww" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="222.5"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textview_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp" />

            <no.srib.app.client.view.DTImageView
                android:id="@+id/dtimageview_info"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/textview_info1"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textview_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dtimageview_info"
                android:layout_margin="15dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>