<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/linearLayout_podcastItem_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/label_gridViewItem_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_gridViewItem_programname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_podcastitem_download_delete"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/linearLayout_podcastItem_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/imageView_podcastItem_download_delete_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/podcast_download" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:contentDescription="@string/imageView_podcastItem_art_desc"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitStart" />

</LinearLayout>